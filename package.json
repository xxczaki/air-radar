{
	"name": "air-radar",
	"version": "1.0.0",
	"description": "Quickly check air quality in your area using trusted sources!",
	"private": true,
	"scripts": {
		"build": "next-translate && next build",
		"dev": "next-translate && next dev",
		"start": "next start",
		"test": "xo && stylelint './**/*.ts'"
	},
	"engines": {
		"node": "12.x"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"extends": [
			"xo-typescript",
			"xo-react"
		],
		"rules": {
			"import/no-unassigned-import": "off",
			"import/extensions": "off",
			"unicorn/string-content": "off",
			"no-mixed-operators": "off",
			"node/no-unsupported-features/es-syntax": "off",
			"@typescript-eslint/prefer-readonly-parameter-types": "off",
			"@typescript-eslint/restrict-template-expressions": "off"
		},
		"settings": {
			"react": {
				"version": "16.13"
			}
		},
		"extensions": [
			"tsx",
			"ts"
		],
		"ignores": [
			"pages",
			"babel.config.js",
			"next.config.js",
			"public/embed.js"
		]
	},
	"dependencies": {
		"airly": "^3.1.0",
		"core-js": "^3.6.5",
		"geodesy": "^1.1.3",
		"lodash.debounce": "^4.0.8",
		"mongodb": "^3.6.0",
		"nanoid": "^3.1.12",
		"next": "^9.5.1",
		"next-translate": "^0.17.1",
		"nprogress": "^0.2.0",
		"polished": "^3.6.5",
		"react": "16.13.1",
		"react-dom": "16.13.1",
		"react-hook-form": "^6.2.0",
		"react-loading-skeleton": "^2.1.1",
		"react-map-gl": "^5.2.7",
		"react-simple-img": "^2.3.9",
		"react-tippy": "^1.4.0",
		"react-toastify": "^6.0.8",
		"react-use-web-share": "^1.0.2",
		"recoil": "0.0.10",
		"styled-components": "^5.1.1",
		"swr": "^0.3.0"
	},
	"devDependencies": {
		"@babel/core": "^7.11.0",
		"@types/lodash.debounce": "^4.0.6",
		"@types/mongodb": "^3.5.25",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^16.9.44",
		"@types/react-map-gl": "^5.2.6",
		"@types/styled-components": "^5.1.2",
		"@typescript-eslint/eslint-plugin": "^3.7.1",
		"@typescript-eslint/parser": "^3.7.1",
		"babel-plugin-polished": "^1.1.0",
		"babel-plugin-styled-components": "^1.11.1",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-config-xo-typescript": "^0.31.0",
		"eslint-plugin-react": "^7.20.5",
		"eslint-plugin-react-hooks": "^4.0.8",
		"imagemin-mozjpeg": "^9.0.0",
		"imagemin-svgo": "^8.0.0",
		"next-offline": "^5.0.2",
		"next-optimized-images": "^2.6.2",
		"redux-devtools-extension": "^2.13.8",
		"stylelint": "^13.6.1",
		"stylelint-config-recommended": "^3.0.0",
		"type-fest": "^0.16.0",
		"typescript": "^3.9.7",
		"xo": "^0.32.1"
	}
}
