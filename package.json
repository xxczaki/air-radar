{
    "name": "air-radar",
    "version": "1.0.0",
    "description": "Quickly check air quality in your area using trusted sources!",
    "private": true,
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "test": "xo && stylelint './**/*.ts'"
    },
    "engines": {
        "node": "12.x"
    },
    "xo": {
        "envs": [
            "node",
            "browser"
        ],
        "extends": [
            "xo-typescript",
            "xo-react"
        ],
        "rules": {
            "import/no-unassigned-import": "off",
            "import/extensions": "off",
            "unicorn/string-content": "off",
            "no-mixed-operators": "off",
            "@typescript-eslint/prefer-readonly-parameter-types": "off",
            "@typescript-eslint/restrict-template-expressions": "off"
        },
        "settings": {
            "react": {
                "version": "16.13"
            }
        },
        "extensions": [
            "tsx",
            "ts"
        ],
        "ignores": [
            "babel.config.js",
            "next.config.js",
            "public/embed.js"
        ]
    },
    "dependencies": {
        "airly": "^3.1.0",
        "chart.js": "^2.9.3",
        "core-js": "^3.6.5",
        "haversine": "^1.1.1",
        "lodash.debounce": "^4.0.8",
        "mongodb": "^3.5.9",
        "nanoid": "^3.1.10",
        "next": "^9.4.4",
        "nprogress": "^0.2.0",
        "polished": "^3.6.5",
        "react": "16.13.1",
        "react-chartjs-2": "^2.9.0",
        "react-dom": "16.13.1",
        "react-hook-form": "^6.0.8",
        "react-map-gl": "^5.2.7",
        "react-popper-tooltip": "^3.1.0",
        "react-simple-img": "^2.3.9",
        "react-toastify": "^6.0.8",
        "styled-components": "^5.1.1",
        "swr": "^0.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.10.5",
        "@types/haversine": "^1.1.4",
        "@types/lodash.debounce": "^4.0.6",
        "@types/mongodb": "^3.5.25",
        "@types/nprogress": "^0.2.0",
        "@types/react": "^16.9.43",
        "@types/react-map-gl": "^5.2.5",
        "@types/styled-components": "^5.1.1",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "babel-plugin-polished": "^1.1.0",
        "babel-plugin-styled-components": "^1.10.7",
        "eslint-config-xo-react": "^0.23.0",
        "eslint-config-xo-typescript": "^0.31.0",
        "eslint-plugin-react": "^7.20.3",
        "eslint-plugin-react-hooks": "^4.0.8",
        "imagemin-mozjpeg": "^9.0.0",
        "imagemin-svgo": "^8.0.0",
        "json-schema": "^0.2.5",
        "next-fonts": "^1.4.0",
        "next-offline": "^5.0.2",
        "next-optimized-images": "^2.6.1",
        "stylelint": "^13.6.1",
        "stylelint-config-recommended": "^3.0.0",
        "typescript": "^3.9.7",
        "xo": "^0.32.1"
    }
}
